{
    "name": "ImgTag",
    "version": "0.1.0",
    "author": "Peter Li",
    "url": "",
    "descriptionmsg": "imgtag-desc",
    "license-name": "GPL-2.0-or-later",
    "type": "parserhook",
    "requires": {
        "MediaWiki": ">= 1.42.0"
    },
    "AutoloadNamespaces": {
        "MediaWiki\\Extension\\ImgTag\\": "includes/"
    },
    "Hooks": {
        "ParserFirstCallInit": "MediaWiki\\Extension\\ImgTag\\ImgTag::onParserFirstCallInit"
    },
    "config": {
        "ImgTagSanitizeSrc": {
            "value": true,
            "description": "Whether the src attribute of the img tag should be sanitized"
        },
        "ImgTagDomains": {
            "value": [
                "upload.wikimedia.org",
                "commons.wikimedia.org",
                "static.wikitide.net"
            ],
            "description": "Domains that can be used in the src attribute of images"
        },
        "ImgTagProtocols": {
            "value": ["https", "http"],
            "description": "Protocols that the src attribute can use"
        }
    },
    "ConfigRegistry": {
        "imgtag": "GlobalVarConfig::newInstance"
    },
    "MessagesDirs": {
        "ImgTag": "i18n"
    },
    "manifest_version": 2
}
